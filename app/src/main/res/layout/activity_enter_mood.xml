<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EnterMood">

    <Button
        android:id="@+id/input_mood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Input mood"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.181" />

    <Button
        android:id="@+id/setTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="showTimePickerDialog"
        android:text="Set Time"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_mood"
        app:layout_constraintVertical_bias="0.248" />

    <Button
        android:id="@+id/setDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="154dp"
        android:layout_marginEnd="152dp"
        android:layout_marginBottom="200dp"

        android:onClick="showDatePickerDialog"
        android:text="Set Date"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/timeDisplay"
        android:layout_width="137dp"
        android:layout_height="94dp"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:gravity="center|center_horizontal"
        android:inputType="time"
        android:text="Time"
        app:layout_constraintBottom_toTopOf="@+id/setTime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_mood" />

    <TextView
        android:id="@+id/dateDisplay"
        android:layout_width="137dp"
        android:layout_height="94dp"
        android:layout_marginStart="137dp"
        android:layout_marginEnd="137dp"
        android:ems="10"
        android:gravity="center|center_horizontal"
        android:inputType="text"
        android:text="Date"
        app:layout_constraintBottom_toTopOf="@+id/setDate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setTime" />

</androidx.constraintlayout.widget.ConstraintLayout>